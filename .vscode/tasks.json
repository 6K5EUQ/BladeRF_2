{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build wideband_sweeper",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake .. && make -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && make clean",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Rebuild wideband_sweeper",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && make clean && cmake .. && make -j4",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
